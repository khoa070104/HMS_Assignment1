<Window x:Class="HMSApp.EditProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Profile" Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        FontFamily="Montserrat" FontWeight="Medium">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0099FF" Offset="0"/>
                <GradientStop Color="#FF347BDA" Offset="0.794"/>
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel Margin="20">
            <TextBlock Text="Edit Profile" FontSize="24" Margin="0,0,0,20" Foreground="White"/>
            <TextBox x:Name="txtFullName" Margin="0,5" />
            <TextBox x:Name="txtEmail" Margin="0,5" />
            <TextBox x:Name="txtPhone" Margin="0,5" />
            <DatePicker x:Name="dpBirthday" Margin="0,5" />
            <PasswordBox x:Name="txtPassword" Margin="0,5" />
            <Button Content="Save Changes" Margin="0,20" Click="SaveChanges_Click"
                    Background="#FF1B7140" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
